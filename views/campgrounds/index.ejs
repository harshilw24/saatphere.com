    <header class="jumbotron" style="background-color: orange;">
        <div class="container">
            <h1>Welcome to SaatPhere!</h1>
            <p>The World's No.1 Matchmaking Service.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Virtual Rishta!</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Candidates!</h3>
        </div>
    </div>
    <% ms() %>
    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %>
        <% if(campground.count === 3) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>" alt="">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
        <% }) %>
        <% campgrounds.forEach(function(campground){ %>
        <% if(campground.count === 2) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>" alt="">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
        <% }) %>
        <% campgrounds.forEach(function(campground){ %>
        <% if(campground.count === 1) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>" alt="">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>
        <% }) %>
    </div>

<%- include("../partials/footer") %>